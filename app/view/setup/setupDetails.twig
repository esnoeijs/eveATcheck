<div class="setup_info">
    <div class="description">
        <p>{{ setup.desc|escape|nl2br }}</p>
    </div>
    <div>
        Points: {{ setup.getPoints }}/{{ tournament.getMaxPoints }}<br/>
        Pilots: {{ setup.getPilots }}/{{ tournament.getMaxPilots }}
    </div>
    {% if setup.hasWarning() %}
        <div class="warning segment" >
            <ul class="warning">
                {% for warning in setup.getWarnings() %}
                    <li>{{ warning.tournament|escape }} - {{ warning.text|escape }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}
</div>
<ul id="fitList" >
    {% for fit in setup.fits %}
        {% include 'fit/fit.twig' with {'setup': setup, 'fit': fit, 'tournament': tournament} %}
    {% endfor %}
</ul>