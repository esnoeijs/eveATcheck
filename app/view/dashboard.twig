{% extends 'base.twig' %}


{% block content %}

<section>
    <h2>submit fit</h2>
    {{ flash }}

    <form id="addFit" method="POST" action="index.php/fit/add">
        <textarea name="fit"></textarea>
        <input type="submit" value="submit" />
    </form>
</section>

<section class="column">
    <h2>fits</h2>
    <div class="menu" >
        <a id="refreshFits" ><img width="25" src="/img/icon/Black_Pie-Circle.png" /></a>
    </div>
    <ul class="sortable" id="fits">
        {% for fit in fits %}
            {% include 'fit/fit.twig' with {'fit': fit} %}
        {% endfor %}
    </ul>
</section>

<section class="column">
    <h2>Setups</h2>
    <ul >
        <li>test setup<ul class="sortable setup"></ul></li>
    </ul>
</section>
<style>

.column h2
{
    display: inline-block;
}
.column .menu
{
    float: right;
    display: block;
    padding-right: 5px;
    padding-top: 3px;
}

h3
{
    padding: 5px;
    padding-left: 2px;
    color: #1c94c4;
}
.sortable
{
    padding:5px;
    margin: 5px;
    border: solid 2px #1c94c4;
    background-color: white;
    min-height: 1em;
}
.sortable li.fit
{
    border-bottom: solid 1px grey;
    padding: 2px;
    font-size: 0.8em;
}

section.column {
    width: 49%;
    display:inline-block;
    vertical-align:top;
    margin: 20px 0;
    background: #ccc;
}
ul.warning {
    background-color: #ffff99;
}
.fit.error {
    background-color: #faa;
}
div.detail {
    position: absolute;
    border: solid 1px #333333;
    background-color: #eee;
    margin-left: 200px;

}
ul.detailFit
{
    padding-left: 10px;
}
ul.detailFit li
{
    padding: 2px;
}
</style>
<script>
$(document).ready(function(){

    $( ".sortable" ).sortable({
        connectWith: ".sortable"
    }).disableSelection();

    addFitDetailhover = function ()
    {
        $('li.fit').hover(function(){
            $('div.detail',this).show();
        },function(){
            $('div.detail',this).hide();
        })
    }

    $('#addFit').ajaxForm(function() {
        // @todo this really is a bit of a waste.
        $('#refreshFits').click();
    });


    $('#refreshFits').click(function()
    {
        $.get(
            'index.php/fit/list',
            function(data)
            {
                $("#fits").html(data);
                addFitDetailhover()
            }
        );
    });


    addFitDetailhover()
})
</script>
{% endblock %}